{
  "name": "excalidraw-mcp-backend",
  "version": "1.0.0",
  "description": "MCP server for Excalidraw diagram manipulation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:mcp": "tsx watch src/index.ts",
    "dev:all": "concurrently --names \"HTTP,MCP\" -c \"cyan,magenta\" \"npm run dev\" \"npm run dev:mcp\"",
    "build": "node build.js",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:strict": "tsc",
    "start": "node dist/server.js",
    "start:mcp": "node dist/index.js",
    "start:all": "concurrently --names \"HTTP,MCP\" -c \"cyan,magenta\" \"npm run start\" \"npm run start:mcp\"",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "keywords": [
    "excalidraw",
    "mcp",
    "model-context-protocol",
    "websocket",
    "typescript"
  ],
  "author": "whallysson",
  "license": "MIT",
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.2.1",
    "esbuild": "^0.21.0",
    "glob": "^10.3.10",
    "tsx": "^4.7.0",
    "typescript": "^5.8.0",
    "vitest": "^1.1.0"
  }
}
